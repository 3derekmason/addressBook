<p style="color: green"><%= notice %></p>

<h1>Contacts</h1>


<div id="contacts" class="container">
  <% @contacts.each do |contact| %>
    <div class="card">
        <div class="card-body">
          <%= render contact %>
        </div>
        <p>
          <%= link_to "Show this contact", contact %>
        </p>
      </div>
  <% end %>
</div>

<%= link_to "New contact", new_contact_path %>
