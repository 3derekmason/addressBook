<%= form_with(model: contact) do |form| %>
  <% if contact.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container form">
    <div class="form-row">
      <%= form.label :first_name, style: "display: block" %>
      <%= form.text_field :first_name, {class: "input-group-text form-field"} %>
    </div>

    <div class="form-row">
      <%= form.label :last_name, style: "display: block" %>
      <%= form.text_field :last_name, {class: "input-group-text form-field"} %>
    </div>

    <div class="form-row">
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email, {class: "input-group-text form-field"} %>
    </div>

    <div class="form-row">
      <%= form.label :phone, style: "display: block" %>
      <%= form.text_field :phone, {class: "input-group-text form-field"} %>
    </div>

    <div class="form-row">
      <%= form.label :address, style: "display: block" %>
      <%= form.text_area :address, {class: "input-group-text form-field"} %>
    </div>

    <div class="form-row">
      <%= form.label :birthday, style: "display: block" %>
      <%= form.date_field :birthday, {class: "input-group-text form-field"} %>
    </div>

    <div class="form-row">
      <%= form.label :twitter, style: "display: block" %>
      <%= form.text_field :twitter , {class: "input-group-text form-field"} %>
    </div>

    <div class="formSubmit">
    <%= form.submit class:"formSubmit"%>
    </div>
  </div>
<% end %>
